{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Symfony TP</h1>
    <br>
    <h2>FORMULAIRE DE CONTACT</h2>
    {{ form(form) }}
    <br>
    {% if id is defined and id is not empty %}
        <h1>Mon contact actuel</h1>
        <p>
        <li>Id :{{ mycontact.id }}</li>
        <li>Pr√©nom : {{ mycontact.firstname }}</li>
        <li>Nom : {{ mycontact.name }}</li>
        <li>Age : {{ mycontact.age }}</li>
        {%  if  mycontact.newsletter == 1 %}
            <li>Newsletter : Oui</li>
        {% endif %}
        {%  if  mycontact.newsletter == 0 %}
            <li>Newsletter : Non</li>
        {% endif %}
        </p>
    {% endif %}
    <br>
    <h1>Toutes les demandes ({{ contacts | length }})</h1>
    {% if contacts is not empty %}
{#        {{ dump(contacts) }}#}


            {% for contact in contacts %}
                <li><a href="{{ path('contact',{id : contact.id}) }}">La demande contact de {{ contact.firstname }} {{ contact.name }}</a></li>
            {% endfor %}

    {% endif %}

    <br>

</div>
{% endblock %}
